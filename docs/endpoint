ACTION = CreateAccount
SIGNATURE SEQUENCE = PUBLICKEY + TIME + IDDISPOSITIVO

request
{
    [[ "id":"1430759611+IDdispositivo", ]]
    "params":[
        "ACTION",
        "PUBLICKEY",
        TIME,
        "IDDISPOSITIVO", 
		"SIGNATURE"
    ]
}

response
{
	result: [address, time] | null
	error: "what's going on" | null
	id: id | null
}

